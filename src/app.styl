::selection
    color inherit

html
    -webkit-font-smoothing antialiased
    -moz-osx-font-smoothing grayscale
    font-family 'Source Sans Pro', sans-serif
    font-size 16px
    font-weight 400
    color white

body
    margin 0
    background-image linear-gradient(to bottom, #6f86d6 100%, #48c6ef 0%)

h1
h3
h4
    margin-top 0
    margin-bottom 0

a
    color #fff

    &:focus
        outline 0

.header
    min-height 100vh
    display flex
    flex-direction column
    justify-content center
    align-items center

    .profile-photo
        width 200px
        height 200px
        border-radius 50%
        border 1px solid #fff
        background-image url('me.jpg')
        background-repeat no-repeat
        background-position center center
        background-size cover

        &-hidden
            display none

    .profile-name
        margin-top 15px
        font-size 3rem

    .profile-work
        font-weight 300
        font-size 2rem

    .work-intent
        font-weight 700
        font-size 1.2rem

    .profile-location
        display flex
        justify-content space-between
        align-items center
        padding 10px 0
        margin-top 30px
        border-bottom 1px solid #fff
        text-decoration none
        font-size 1.2rem
        font-weight 400

        .geo-arrow
            width 15px
            height 15px
            margin-left 15px
            transform scale(0.8)
            transition transform 150ms ease-in-out

        &:hover
            .geo-arrow
                transform scale(1.2)

.footer
    min-height 100vh
    display flex
    flex-direction column
    justify-content center
    align-items center

    .contact
        font-size 3rem
        margin-bottom 15px

    .social-media-list
        list-style none
        padding 0
        margin 0
        display flex
        flex-direction column

        .item
            margin-bottom 10px

            &:last-child
                margin-bottom 0

            .link
                display flex
                justify-content space-between
                align-items center
                border 2px solid #fff
                text-decoration none
                font-weight 700
                text-transform uppercase
                padding 20px 40px

                .arrow
                    width 15px
                    height 15px
                    margin-left 15px
                    transform rotate(45deg) scale(0.8)
                    transition transform 150ms ease-in-out

                &:hover
                    .arrow
                        transform rotate(45deg) scale(1.2)
